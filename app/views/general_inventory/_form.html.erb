<%= form_for :general_inventory, :html => { :class => "form-horizontal general_inventory" }, :url => general_inventory_index_path  do |f| %>

  <% if (@general_inventory.blank? ? FALSE :  @general_inventory.errors.any?) %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@general_inventory.errors.count, "error") %> prohibited this general_inventory from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% (@general_inventory.blank? ? [] : @general_inventory.errors.full_messages).each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
     <%= f.label :item, :class => 'control-label col-lg-2' %>
     <div class="col-lg-4">
       <%= f.text_field :item, :class => 'form-control' %>
     </div>
      <%#=f.error_span(:lot_number) %>
  </div>
  <div class="form-group">
    <%= f.label :lot_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :lot_number, :class => 'form-control' %>
    </div>
    <%#=f.error_span(:lot_number) %>
  </div>
  <div class="form-group">
    <%= f.label :expiration_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :expiration_date, :class => 'form-control' %>
    </div>
    <%#=f.error_span(:expiration_date) %>
  </div>
  <div class="form-group">
    <%= f.label :received_quantity, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :received_quantity, :class => 'form-control' %>
    </div>
    <%#=f.error_span(:current_stock) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Save", :class => 'btn btn-primary' %>
      <%= link_to t('.close', :default => t("helpers.links.close")),
                "/general_inventory", :class => 'btn btn-danger' %>
    </div>
  </div>

<% end %>
