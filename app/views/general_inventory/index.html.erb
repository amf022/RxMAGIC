<%- model_class = GeneralInventory -%>
<%= javascript_include_tag 'jquery-1.12.0.min.js' %>
<%= javascript_include_tag 'jquery-ui.min.js' %>
<%= stylesheet_link_tag    'jquery-ui', media: 'all', 'data-turbolinks-track' => true %>

<div class="page-header" style="margin: 0px !important;padding: 0px !important;">
  <h3><%=t '.title', :default => model_class.model_name.human.titleize %></h3>
</div>
<div class="row row-offcanvas row-offcanvas-right">

  <div class="col-xs-12 col-sm-10">
    <table id="generalInventory" class="table table-striped table-bordered" width="100%" cellspacing="0">
      <thead>
      <tr>
        <th>Item</th>
        <th style="width: 15%;">Item Identifier</th>
        <th style="width: 15%;">Lot Number</th>
        <th style="width: 7.5%;">Current Quantity</th>
        <th style="width: 7.5%;">Expiration Date</th>
        <th style="width: 10%;">Actions</th>
      </tr>
      </thead>

      <tbody>

        <% (@inventory || []).each do |item| %>
            <tr>
              <td id="drug<%= item.id %>" ><%= item.rxnconso.name.downcase.titleize %></td>
              <td><%= Misc.dash_formatter(item.gn_identifier) %></td>
              <td id="lot<%= item.id %>"><%= item.lot_number %></td>
              <td id="qn<%= item.id %>"><%= number_with_delimiter(item.current_quantity) %></td>
              <td id="date<%= item.id %>"><%= item.expiration_date.strftime('%b-%Y') %></td>
              <td>

                <a href="#" class="edit" data-toggle="modal" data-target="#basicModal" data-uid="<%= item.id %>"><img style="padding-right: 5px;" src="/assets/edit.png" title="Edit Item"></a>
                <img style="padding-right: 5px;" src="/assets/print.png" onmousedown="window.location='/print_bottle_barcode/<%= item.gn_identifier %>'" title="Print Barcode">
                <a href="#" data-href="/void_general_inventory/<%= item.gn_identifier %>" data-toggle="modal" data-target="#confirm-delete" class="delete"><img src="/assets/delete.png" title="Void Item"></a>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>


  <div class="col-xs-3 col-sm-2 sidebar-offcanvas" id="sidebar" >
    <div class="panel panel-info" >
      <div class="panel-heading">
        <span style=" font-size: 16px;font-weight: bold" class="panel-title">Stock Summary</span>
      </div>
      <div class="panel-body">
        <a href="#" class="list-group-item">
          <div style="width: 100%; text-align: center;" class="list-group-item-text">
            <h4  class="list-group-item-heading">Items in Stock</h4>
            <span class="highlighted"><%= @wellStocked.length %></span>
          </div>
        </a>
        <a href="#" class="list-group-item">
          <div style="width: 100%; text-align: center;" class="list-group-item-text">
            <h4  class="list-group-item-heading">Under Stocked Items</h4>
            <span class="highlighted"><%= @underStocked.length %></span>
          </div>
        </a>
        <a href="#" class="list-group-item">
          <div style="width: 100%; text-align: center;" class="list-group-item-text">
            <h4  class="list-group-item-heading">Items About to Expire</h4>
            <span class="highlighted"><%= @aboutToExpire.length %></span>
          </div>
        </a>
        <a href="#" class="list-group-item">
          <div style="width: 100%; text-align: center;" class="list-group-item-text">
            <h4  class="list-group-item-heading">Expired Items</h4>
            <span class="highlighted"><%= @expired.length %></span>
          </div>
        </a>
      </div>
    </div>

    <a href="#" class="btn btn-lg btn-primary"
       data-toggle="modal" style="width: 100%;"
       data-target="#basicModal">Add Item</a>
  </div>
</div><!--/.sidebar-offcanvas-->
</div>

<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add Item</h4>
      </div>
      <div class="modal-body">
        <%= form_for :general_inventory, :html => { :class => "form-horizontal general_inventory" }, :url => general_inventory_index_path  do |f| %>

            <div class="form-group">
              <%= f.label :item, :class => 'control-label col-lg-4' %>
              <div class="col-lg-6">
                <input type="text" name="general_inventory[item]" id="drugName" data-provide="typeahead" placeholder="Enter drug name" class ='form-control' required >
              </div>
              <%#=f.error_span(:lot_number) %>
            </div>
            <div class="form-group">
              <%= f.label :lot_number, :class => 'control-label col-lg-4' %>
              <div class="col-lg-6">
                <%= f.text_field :lot_number, :class => 'form-control', :placeholder => 'Lot number',:autocomplete=> 'off', :required => true %>
              </div>
              <%#=f.error_span(:lot_number) %>
            </div>
            <div class="form-group">
              <%= f.label :expiration_date, :class => 'control-label col-lg-4' %>
              <div class="col-lg-6">
                <div class='input-group date' id='datetimepicker1'>
                  <input name="general_inventory[expiration_date]" id="general_inventory_expiration_date" type='text' placeholder="Expiry date" class="form-control" autocomplete="off" required/>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
              </div>
              <%#=f.error_span(:expiration_date) %>
            </div>
            <div class="form-group">
              <%= f.label :received_quantity, :class => 'control-label col-lg-4' %>
              <div class="col-lg-6">
                <%= f.text_field :received_quantity,:placeholder => "Quantity received" ,:class => 'form-control',:autocomplete=> 'off', :required => true %>
              </div>
              <%#=f.error_span(:current_stock) %>
            </div>
            <%= f.hidden_field :inventory_id, :value => nil %>
            <div class="form-group">
              <div class="col-lg-offset-7 col-lg-10">
                <%= f.submit "Save", :class => 'btn btn-success' %>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
              </div>
            </div>

        <% end %>

      </div>

    </div>
  </div>
</div>


<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3 style=" font-size: 20px;" class="panel-title">Delete Item from Inventory</h3>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this item?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
        <a class="btn btn-danger btn-ok" id="btnYes">Yes</a>
      </div>
    </div>
  </div>
</div>

<% if !flash[:errors].blank? || !flash[:success].blank? %>

    <div class="modal show" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModal" >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-body">
            <% if !flash[:errors].blank? %>
                <div id="error_expl" class="panel panel-danger">
              <div class="panel-heading">
                <h3 class="panel-title">Entry could not be saved due to :</h3>
              </div>
              <div class="panel-body">
                <ul>
                  <% flash[:errors].keys.each do |attribute| %>
                          <% flash[:errors][attribute].uniq.each do |msg| %>
                                  <li><%= attribute.gsub('_', ' ') %> <%= msg %></li>
                              <% end %>
                  <% end %>
                </ul>
              </div>
            </div>
            <% else %>
                <div class="alert alert-success" role="alert">
                 <strong><%= flash[:success] %></strong>
                </div>
            <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" onclick = "$('#errorModal').removeClass('show')">Close</button>
          </div>
        </div>
      </div>
    </div>
<% end %>


<script type="text/javascript">

    // Styling the table with datatables library
    $(document).ready(function() {
        $('#generalInventory').DataTable({"bLengthChange": false});
    } );

    // Date picker activation
    $(function () {
        $('#datetimepicker1').datetimepicker({format: 'MMM YYYY'});
    });


    $( "#drugName" ).autocomplete({
        source: "/suggestions",
        minLength: 2
    });

    $('.delete').on('click', function(e) {
        $('#btnYes').attr('href',$(this).data('href'));
    });

    $('.edit').on('click', function(e) {
        $('#drugName').attr('value',$('#drug'+$(this).data('uid'))[0].innerHTML);
        $('#general_inventory_lot_number').attr('value',$('#lot'+$(this).data('uid'))[0].innerHTML);
        $('#general_inventory_received_quantity').attr('value',$('#qn'+$(this).data('uid'))[0].innerHTML);
        $('#general_inventory_expiration_date')[0].value = $('#date'+$(this).data('uid'))[0].innerHTML;
        $('#general_inventory_inventory_id')[0].value = $(this).data('uid')
        $('#myModalLabel')[0].innerHTML = "Edit Item";
    });

    $('a.btn.btn-lg.btn-primary').on('click', function(e) {
        $('#myModalLabel')[0].innerHTML = "Add Item";
    });
</script>
