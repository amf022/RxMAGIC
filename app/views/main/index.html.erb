<style>
    .col-xs-6.col-lg-4{
    }
    img {
        height: 35px !important;
    }
    a.heading {
        color: #006699;
        font-weight: bold;
        font-size: 14px;
        cursor: pointer;
    }
</style>

<div class="row row-offcanvas row-offcanvas-right" style="margin-top: 20px;">
  <div class="col-xs-12 col-sm-9">
    <h2 style=" font-size: 15px;" class="panel-title">Prescription Management </h2>
    <hr style="border-color: black"/>
    <div class="row">
          <div class="col-xs-6 col-lg-4">
            <table cellpadding="5px">
              <tr>
                <td rowspan="2" style="padding-right: 10px;">
                  <img style="height: 40%;" src="/assets/dispense.png" >
                </td>
                <td>
                  <a href="/prescription/" class="heading">Dispense</a>
                </td>
              </tr>
              <tr>
                <td>
                  Fill prescriptions sent from Epic.
                </td>
              </tr>
            </table>
          </div><!--/.col-xs-6.col-lg-4-->
          <div class="col-xs-6 col-lg-4">
            <table>
              <tr>
                <td rowspan="2" style="padding-right: 10px;">
                  <img src="/assets/refill.png" >
                </td>
                <td>
                  <a class="heading">Re-fill</a>
                </td>
              </tr>
              <tr>
                <td>
                  Dispense medication with no prescriptions.
                </td>
              </tr>
            </table>
          </div><!--/.col-xs-6.col-lg-4-->
        </div>
    <br/>
    <h2 style="font-size: 15px;" class="panel-title">Inventory Control</h2>
    <hr style="border-color: black"/>
    <div class="row">
      <div class="col-xs-6 col-lg-4">
        <table>
          <tr>
            <td rowspan="2" style="padding-right: 10px;">
              <img src="/assets/general_inventory.png" >
            </td>
            <td>
              <a class="heading" href="/general_inventory/">General Inventory</a>
            </td>
          </tr>
          <tr>
            <td>
              Enter and manage general medications.
            </td>
          </tr>
        </table>
      </div><!--/.col-xs-6.col-lg-4-->
      <div class="col-xs-6 col-lg-4">
        <table>
          <tr>
            <td rowspan="2" style="padding-right: 10px;">
              <img src="/assets/pap_inventory.png" >
            </td>
            <td>
              <a class="heading" href="/pmap_inventory/">PMAP Inventory</a>
            </td>
          </tr>
          <tr>
            <td>
              Enter and manage PMAP medications.
            </td>
          </tr>
        </table>
      </div><!--/.col-xs-6.col-lg-4-->

      <div class="col-xs-6 col-lg-4">
        <table>
          <tr>
            <td rowspan="2" style="padding-right: 10px;">
              <img src="/assets/inventory_management.png" >
            </td>
            <td>
              <a href="/drug_threshold/" class="heading">Inventory Management</a>
            </td>
          </tr>
          <tr>
            <td>
              Manage inventory thresholds for medication.
            </td>
          </tr>
        </table>
      </div><!--/.col-xs-6.col-lg-4-->
    </div><!--/row-->
    <br/>
    <h2 style="font-size: 15px;" class="panel-title">Documentation</h2>
    <hr style="border-color: black"/>
    <div class="row">
          <div class="col-xs-6 col-lg-4">
            <table>
              <tr>
                <td rowspan="2" style="padding-right: 10px;">
                  <img src="/assets/report.png" >
                </td>
                <td>
                  <a class="heading">Activity Sheet</a>
                </td>
              </tr>
              <tr>
                <td>
                  Manage pharmacy activity sheet
                </td>
              </tr>
            </table>
          </div><!--/.col-xs-6.col-lg-4-->
        </div>
  </div><!--/.col-xs-12.col-sm-9-->

  <div class="col-xs-4 col-sm-3 sidebar-offcanvas" id="sidebar" >
    <div class="panel panel-primary" style="height: 75vh" >
      <div class="panel-heading">
        <h3 style=" font-size: 20px;" class="panel-title">Alerts</h3>
      </div>
      <div style="height: 90%;overflow: auto;" class="panel-body">
        <%= render '/news/feed' %>
      </div>
    </div>
  </div>
  </div><!--/.sidebar-offcanvas-->
</div>