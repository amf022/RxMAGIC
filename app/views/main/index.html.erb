<style>
    .col-xs-6.col-lg-4{
        border-width: 1px 0px 0px 0px;
        border-color: silver;
        border-style: solid;
        padding: 5px;
        margin: 5px;
    }
    img {
        height: 60px !important;
    }
    a.heading {
        color: #006699;
        font-weight: bold;
        font-size: 18px;
        cursor: pointer;
    }
</style>

<div class="row row-offcanvas row-offcanvas-right" style="margin-top: 20px;">
  <div class="col-xs-12 col-sm-9">
    <div class="row">
      <div class="col-xs-6 col-lg-4">
        <table cellpadding="5px">
          <tr>
            <td rowspan="2" style="padding: 10px;">
                <img src="/assets/dispense.png" >
            </td>
            <td>
              <a href="/prescription/" class="heading">Dispense</a>
            </td>
          </tr>
          <tr>
            <td>
                Fulfil prescriptions that came through Epic.
            </td>
          </tr>
        </table>
      </div><!--/.col-xs-6.col-lg-4-->
      <div class="col-xs-6 col-lg-4">
        <table>
          <tr>
            <td rowspan="2" style="padding: 10px;">
              <img src="/assets/general_inventory.png" >
            </td>
            <td>
              <a class="heading" href="/general_inventory/">General Inventory</a>
            </td>
          </tr>
          <tr>
            <td>
                Add and edit general inventory medicine.
            </td>
          </tr>
        </table>
      </div><!--/.col-xs-6.col-lg-4-->
      <div class="col-xs-6 col-lg-4">
        <table>
          <tr>
            <td rowspan="2" style="padding: 10px;">
              <img src="/assets/pap_inventory.png" >
            </td>
            <td>
              <a class="heading" href="/pap_inventory/">PAP Inventory</a>
            </td>
          </tr>
          <tr>
            <td>
              Add and edit PAP inventory medicine.
            </td>
          </tr>
        </table>
      </div><!--/.col-xs-6.col-lg-4-->
      <div class="col-xs-6 col-lg-4">
        <table>
          <tr>
            <td rowspan="2" style="padding: 10px;">
              <img src="/assets/refill.png" >
            </td>
            <td>
              <a class="heading">Re-fill</a>
            </td>
          </tr>
          <tr>
            <td>
                Dispense medicine to patients without prescriptions.
            </td>
          </tr>
        </table>
      </div><!--/.col-xs-6.col-lg-4-->
      <div class="col-xs-6 col-lg-4">
        <table>
          <tr>
            <td rowspan="2" style="padding: 10px;">
              <img src="/assets/prescription_drugs.png" >
            </td>
            <td>
              <a class="heading">Inventory Management</a>
            </td>
          </tr>
          <tr>
            <td>
                Manage medicine thresholds.
            </td>
          </tr>
        </table>
      </div><!--/.col-xs-6.col-lg-4-->
      <div class="col-xs-6 col-lg-4">
        <table>
          <tr>
            <td rowspan="2" style="padding: 10px;">
              <img src="/assets/report.png" >
            </td>
            <td>
              <a class="heading">Reports</a>
            </td>
          </tr>
          <tr>
            <td>
                View system reports.
            </td>
          </tr>
        </table>
      </div><!--/.col-xs-6.col-lg-4-->
    </div><!--/row-->
  </div><!--/.col-xs-12.col-sm-9-->

  <div class="col-xs-4 col-sm-3 sidebar-offcanvas" id="sidebar" >
    <div class="panel panel-primary" >
      <div class="panel-heading">
        <h3 style=" font-size: 20px;" class="panel-title">News</h3>
      </div>
      <div class="panel-body">
        <%= render '/news/feed' %>
      </div>
    </div>
  </div>
  </div><!--/.sidebar-offcanvas-->
</div>