<%- model_class = PmapInventory -%>
<%= javascript_include_tag 'jquery-1.12.0.min.js' %>

<div class="page-header" style="margin: 0px !important;padding: 0px !important;">
  <h3><%=t '.title', :default => "Users" %></h3>
</div>
<div class="row row-offcanvas row-offcanvas-right">
  <div class="col-xs-12 col-sm-12">
    <table id="users" class="table table-striped table-bordered" width="100%" cellspacing="0">
      <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>User Role</th>
        <th style="width: 12.5%;">Actions</th>
      </tr>
      </thead>

      <tbody>

      <% (@users || []).each do |user| %>
          <tr>
            <td><%= user.first_name  %></td>
            <td><%= user.last_name  %></td>
            <td><%= user.username  %></td>
            <td><%= user.user_role %></td>
            <td style="text-align: center;">
              <%= link_to "View","/user/#{user.id}"  %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<script type="text/javascript">

  // Styling the table with datatables library
  $(document).ready(function() {
    $('#users').DataTable({
      "bLengthChange": false,
      "bDestroy": true
    });
  } );


</script>