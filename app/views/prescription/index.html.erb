<%= javascript_include_tag 'jquery-1.12.0.min.js' %>
<%= javascript_include_tag 'jquery.dataTables.min.js' %>
<%= javascript_include_tag 'dataTables.bootstrap4.min.js' %>


<div class="page-header">
  <h1><%=t '.title', :default => "Current Prescriptions" %></h1>
</div>
<div class="row row-offcanvas row-offcanvas-right">

  <div class="col-xs-12 col-sm-12">
    <table id="example" class="table table-striped table-bordered" width="100%" cellspacing="0">
      <thead>
      <tr>
        <th>Patient</th>
        <th>Item</th>
        <th>Quantity</th>
        <th>Directions</th>
        <th>Provider</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>

      <% (@prescriptions || []).each do |prescription| %>
          <tr>
            <td><%= prescription.patient_name %></td>
            <td><%= prescription.rxnconso.name.downcase.titleize %></td>
            <td><%= prescription.quantity %></td>
            <td><%= " " %></td>
            <td><%= prescription.prescribed_by %></td>
            <td></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>

<script type="text/javascript">

    // Styling the table with datatables library
    $(document).ready(function() {
        $('#example').DataTable();
    } );
</script>
