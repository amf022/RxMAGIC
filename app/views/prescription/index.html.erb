<%= javascript_include_tag 'jquery-1.12.0.min.js' %>


<div class="page-header" style="margin: 0px !important;padding: 0px !important;">
  <h3><%=t '.title', :default => "Current Prescriptions" %></h3>
</div>
<div class="row row-offcanvas row-offcanvas-right">

  <div class="col-xs-12 col-sm-12">
    <table id="example" class="table table-striped table-bordered" width="100%" cellspacing="0">
      <thead>
      <tr>
        <th>Patient</th>
        <th>Item</th>
        <th style="width: 7.5%;">Quantity</th>
        <th>Directions</th>
        <th>Provider</th>
        <th style="width: 7.5%;">Actions</th>
      </tr>
      </thead>

      <tbody>

      <% (@prescriptions || []).each do |prescription| %>
          <tr>
            <td><%= prescription.patient_name %></td>
            <td><%= prescription.rxnconso.name.downcase.titleize %></td>
            <td style="text-align: center"><%= prescription.quantity %></td>
            <td><%= prescription.directions %></td>
            <td><%= prescription.prescribed_by %></td>
            <td>
              <img src="/assets/delete.png" title="Void Item">
              <img src="/assets/dispense_small.png" title="Fill prescription">
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>

<script type="text/javascript">

    // Styling the table with datatables library
    $(document).ready(function() {
        $('#example').DataTable({"bLengthChange": false});
    } );
</script>
