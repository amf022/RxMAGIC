<% (@alerts || []).each do |alert| %>

    <% case alert.news_type %>
        <% when "new prescription" %>
        <a href="#" class="list-group-item">
          <table style="width: 100%">
            <tr>
              <td><img src="/assets/dispense_small.png"></td>
              <td><h5 class="list-group-item-heading">New Prescription</h5><button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button></td>
              <td valign="top" style="margin-top: -10px;margin-right:-15px; float: right"><a><img src="/assets/close.png"> </a></td>
            </tr>
            <tr>
              <td colspan="3">
                <p class="list-group-item-text"><%= alert.message %></p>
              </td>
            </tr>
            <tr>
              <td colspan="3" style="text-align:center;padding-top: 2px;">
                <a style="width: 60%;"  href="/prescription/<%= alert.id %>" class="btn btn-xs btn-success" type="button">Dispense</a>
              </td>
            </tr>
          </table>
        </a>

        <% when "low pmap stock" %>
        <a href="#" class="list-group-item">
          <table style="width: 100%">
            <tr>
              <td><img src="/assets/pmap.png"></td>
              <td><h5 class="list-group-item-heading">PMAP: Low Inventory</h5></td>
              <td valign="top" style="margin-top: -10px;margin-right:-15px; float: right"><a><img src="/assets/close.png"> </a></td>
            </tr>
            <tr>
              <td colspan="3">
                <p class="list-group-item-text"><%= alert.message %></p>
              </td>
            </tr>
            <tr>
              <td colspan="3" style="text-align:center;padding-top: 2px;">
                <button class="btn btn-xs btn-success" type="button">Add to Activity Sheet</button>
              </td>
            </tr>
          </table>
        </a>

        <% when "low general stock" %>
        <a href="#" class="list-group-item">
          <table style="width: 100%">
            <tr>
              <td><img src="/assets/general_inventory_small.png"></td>
              <td><h5 class="list-group-item-heading">General: Low Inventory</h5></td>
              <td valign="top" style="margin-top: -10px;margin-right:-15px; float: right"><a><img src="/assets/close.png"> </a></td>
            </tr>
            <tr>
              <td colspan="3" >
                <p class="list-group-item-text"><%= alert.message %></p>
              </td>
            </tr>
            <tr>
              <td colspan="3" style="text-align:center;padding-top: 2px;">
                <button class="btn btn-xs btn-success" type="button">Add to Activity Sheet</button>
              </td>
            </tr>
          </table>
        </a>
        <% when "expiring item" %>
        <a href="#" class="list-group-item">
          <table style="width: 100%">
            <tr>
              <td><img src="/assets/expiring.png"></td>
              <td><h5 class="list-group-item-heading">Item about to expire</h5></td>
              <td valign="top" style="margin-top: -10px;margin-right:-15px; float: right"><a><img src="/assets/close.png"> </a></td>
            </tr>
            <tr>
              <td colspan="3">
                <p class="list-group-item-text"><%= alert.message %></p>
              </td>
            </tr>
          </table>
        </a>

        <% when "expired item" %>
        <a href="#" class="list-group-item">
          <table style="width: 100%">
            <tr>
              <td><img src="/assets/expired.png"></td>
              <td><h5 class="list-group-item-heading">Item has expired</h5></td>
              <td valign="top" style="margin-top: -10px;margin-right:-15px; float: right"><a><img src="/assets/close.png"> </a></td>
            </tr>
            <tr>
              <td colspan="3">
                <p class="list-group-item-text"><%= alert.message %></p>
              </td>
            </tr>
            <tr>
              <td colspan="3" style="text-align:center;padding-top: 2px;">
                <button style="width: 80%;" class="btn btn-xs btn-danger" type="button">Void</button>
              </td>
            </tr>
          </table>
        </a>
        <% when "under utilized item" %>

        <a href="#" class="list-group-item">
          <table style="width: 100%">
            <tr>
              <td><img src="/assets/move.png"></td>
              <td><h5 class="list-group-item-heading">Unutilized PMAP Item</h5></td>
              <td valign="top" style="margin-top: -10px;margin-right:-15px; float: right"><a><img src="/assets/close.png"> </a></td>
            </tr>
            <tr>
              <td colspan="3">
                <p class="list-group-item-text"><%= alert.message %></p>
              </td>
            </tr>
            <tr>
              <td colspan="3" style="text-align:center;padding-top: 2px;">
                <button style="width:60%;" class="btn btn-xs btn-success" type="button">Transfer Item</button>
              </td>
            </tr>
          </table>
        </a>
    <% end %>
<% end %>

